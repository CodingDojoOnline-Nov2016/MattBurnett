<h1>Welcome, <span ng-bind="user.name"></span></h1>
<p>Dashboard  | <a href="#/">Logout</a></p>
<div class="row main">
	<div class="text-right">
		<input type="text" ng-model="query" placeholder="Search...">
	</div>
	<div class="col-xl-12">
		<table class="table table-striped table-hover" topics>
			<thead>
				<tr>
					<th>Name</th>
					<th>Survey Question</th>
					<th>Date Posted</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody ng-controller='topicController'>
				<tr ng-repeat="topic in topics | filter: query" >
					<td ng-bind="topic.name"></td>
					<td><a ng-bind="topic.title" href="#/topic/{{ topic._id }}"></a></td>
					<td><a ng-href="{{ date }}"></a></td>
					<td ng-bind="topic.posts"></td>
				</tr>
			</tbody>
		</table>
	</div>
	<h2>Create A Poll</h2>
	<form class="form-horizontal" role="form">
		<div class="form-group">
			<label class="col-sm-2 control-label">Topic:</label>
			<input type="text" class="col-sm-4" ng-model="newTopic.title">
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Option 1:</label>
			<textarea class="col-sm-2" rows="1" ng-model="newTopic.option1"></textarea>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Option 2:</label>
			<textarea class="col-sm-2" rows="1" ng-model="newTopic.option2"></textarea>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Option 3:</label>
			<textarea class="col-sm-2" rows="1" ng-model="newTopic.option3"></textarea>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Option 4:</label>
			<textarea class="col-sm-2" rows="1" ng-model="newTopic.option4"></textarea>
		</div>

		<div class="form-group">
			<button class="btn btn-success col-md-1 col-md-offset-5" ng-click="createTopic(newTopic, user)">Submit Poll</button>
		</div>
	</form>
</div>
